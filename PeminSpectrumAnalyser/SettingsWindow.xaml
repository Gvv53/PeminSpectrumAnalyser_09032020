<Window x:Class="PeminSpectrumAnalyser.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeminSpectrumAnalyser"
        mc:Ignorable="d"
        Title="НАСТРОЙКИ ПРИЛОЖЕНИЯ" Height="466.333" Width="899" WindowStartupLocation="CenterScreen" Topmost="True" Background="{x:Null}" Foreground="{x:Null}">
    <Grid Background="#FF1A1A1A" VerticalAlignment="Center" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="578"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Label Content="ПОДКЛЮЧЕНИЕ" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="391" Foreground="#FF8ECFFB" ForceCursor="True" 
               FontWeight="Bold" Height="25" />
        <CheckBox x:Name="Emulation"  Grid.Column="3" Grid.ColumnSpan="2" Content="ВКЛЮЧИТЬ ЭМУЛЯЦИЮ СИГНАЛА" HorizontalAlignment="Left" Margin="412,6,0,3"
                  Foreground="#FF007ACC" FontWeight="Bold" />
        <TextBox x:Name="Address" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="192.168.12.233" VerticalAlignment="Stretch" 
                 Margin="35,0,453,0" BorderBrush="#FF007ACC" Background="{x:Null}" RenderTransformOrigin="0.159,1.733"/>
        <Label Content="IP Адрес прибора"  Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" Width="117" Foreground="#FF8ECFFB"
               ForceCursor="True" FontWeight="Bold" Height="26"/>

        <Label Content="Прибор" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="185,0,0,0" VerticalAlignment="Top" Width="108" Foreground="#FF8ECFFB"
               ForceCursor="True" FontWeight="Bold" Height="26" />
        <ComboBox x:Name="HardwareComboBox" Grid.Row="2" Grid.Column="3" SelectedIndex="0" HorizontalAlignment="Left" Margin="275,0,0,0" 
                  VerticalAlignment="Top" Width="120" Height="25" SelectionChanged="HardwareComboBox_SelectionChanged">
            <ComboBoxItem Content="FSH4"/>
            <ComboBoxItem Content="Agilent9xxx"/>
        </ComboBox>
        <Label Content="Номер порта"  Grid.Row="3" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" Width="88" Foreground="#FF8ECFFB" ForceCursor="True"
               FontWeight="Bold" Height="26" />
        <TextBox x:Name="Port" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="5025" VerticalAlignment="Stretch"  
                 Margin="35,0,453,0" BorderBrush="#FF007ACC" Background="{x:Null}"/>
        <Label Grid.Row="3" Grid.Column="3" Grid.RowSpan="3" Content="ВНИМАНИЕ! ИЗМЕНЕНИЕ ТИПА ПРИБОРА ВСТУПИТ &#xD;&#xA;В СИЛУ ТОЛЬКО ПОСЛЕ НАЖАТИЯ КНОПКИ &#xD;&#xA;&quot;ПРИМЕНИТЬ&quot; И ПЕРЕПОДКЛЮЧЕНИЯ К ПРИБОРУ"
               HorizontalAlignment="Left" Margin="185,0,0,0" VerticalAlignment="Top" Width="342" Foreground="#FFFF4B00" ForceCursor="True" FontWeight="Bold" Height="59" />
       
        <Label Grid.Row="5" Grid.RowSpan="2" Grid.Column="1" Content="ПАПКА ХРАНЕНИЯ ЭКСПЕРИМЕНТОВ " HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="391" Foreground="#FF8ECFFB"
               ForceCursor="True" FontWeight="Bold" Height="26"/>
        <TextBox x:Name="LeftPanelPath" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="не задано" VerticalAlignment="Stretch"  BorderBrush="#FF007ACC" Background="{x:Null}"/>

        <GroupBox Grid.Row="7" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4" Header="Для Агилент" Foreground="White" BorderThickness="0.5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="TRACE TYPE:" HorizontalAlignment="Left" VerticalAlignment="Top"  Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="25" />
                <Label Content="сигнал" HorizontalAlignment="Left"  VerticalAlignment="Center" Foreground="#FF8ECFFB" 
                  ForceCursor="True" FontWeight="Bold" Height="26" Margin="10,0,0,0" />
                <ComboBox x:Name="cbSignalTraceType"  SelectedIndex="0" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Margin="5,0,0,0" Padding="5,3,4,3" >
                    <ComboBoxItem Content="WRITe" IsSelected="True"/>
                    <ComboBoxItem Content="AVERage"/>
                    <ComboBoxItem Content="MAXHold"/>
                    <ComboBoxItem Content="MINHold"/>
                </ComboBox>
                <Label Content="шум" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF8ECFFB"
               ForceCursor="True" FontWeight="Bold" Height="26" Grid.Column="3" Grid.Row="7" Grid.RowSpan="2" Margin="10,0,0,0"/>
                <ComboBox x:Name="cbNoiseTraceType"  SelectedIndex="0" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Margin="5,0,0,0" Padding="5,3,4,3" >
                    <ComboBoxItem Content="WRITe" IsSelected="True"/>
                    <ComboBoxItem Content="AVERage"/>
                    <ComboBoxItem Content="MAXHold"/>
                    <ComboBoxItem Content="MINHold"/>
                </ComboBox>
                <Label Content="TRACE DETECTOR:" HorizontalAlignment="Left" VerticalAlignment="Top"  Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold"
                Height="25" Margin="30,0,0,0" />
                <Label Content="сигнал" HorizontalAlignment="Left"  VerticalAlignment="Center" Foreground="#FF8ECFFB" 
                  ForceCursor="True" FontWeight="Bold" Height="26" Margin="10,0,0,0" Padding="5" VerticalContentAlignment="Center" />
                <ComboBox x:Name="cbSignalDetector"  SelectedIndex="0" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Padding="5,3,4,3" >
                    <ComboBoxItem Content="AVERage" IsSelected="True"/>
                    <ComboBoxItem Content="NEGative"/>
                    <ComboBoxItem Content="NORMal"/>
                    <ComboBoxItem Content="POSitive"/>
                    <ComboBoxItem Content="SAMPle"/>
                </ComboBox>
                <Label Content="шум" HorizontalAlignment="Left" VerticalAlignment="Top"  Foreground="#FF8ECFFB"
               ForceCursor="True" FontWeight="Bold" Height="26" Grid.Column="3" Grid.Row="7" Grid.RowSpan="2" Margin="10,0,0,0"/>
                <ComboBox x:Name="cbNoiseDetector"  SelectedIndex="0" Grid.Column="3"  Grid.Row="8" 
                  VerticalAlignment="Top" Height="25" HorizontalAlignment="Right" Margin="5,0,0,0" Padding="5,3,4,3">
                    <ComboBoxItem Content="AVERage"/>
                    <ComboBoxItem Content="NEGative"/>
                    <ComboBoxItem Content="NORMal"/>
                    <ComboBoxItem Content="POSitive" IsSelected="True"/>
                    <ComboBoxItem Content="SAMPle"/>
                </ComboBox>
            </StackPanel>
        </GroupBox >

        <Label Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Content="СМЕЩЕНИЯ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="129" Foreground="#FF8ECFFB" ForceCursor="True"
               FontWeight="Bold" Height="25" />
        <Label Grid.Row="9" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2" Content = "Смещение для пересчета DBbMkv" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top" Width="220" 
               Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="26" />
        <TextBox Grid.Row="10" Grid.Column="3" x:Name="DbMKvShift" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="108.75"
                 VerticalAlignment="Stretch"  Margin="185,0,303,0" BorderBrush="#FF007ACC" Background="{x:Null}"/>
        <Label Grid.Row="9" Grid.RowSpan="2" Grid.Column="3" Content="Дополнительное смещение (Db)" HorizontalAlignment="Left" Margin="275,22,0,0"
               VerticalAlignment="Top" Width="205" Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="26" />
        <TextBox Grid.Row="10" Grid.Column="3" Grid.ColumnSpan="2" x:Name="CommonShift" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="3" 
                 VerticalAlignment="Stretch"  Margin="551,0,0,0" BorderBrush="#FF007ACC" Background="{x:Null}" />
        <Label Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3" Content="НАКОПЛЕНИЕ СИГНАЛА И ТИП УСРЕДНЕНИЯ" HorizontalAlignment="Left"
               VerticalAlignment="Top" Width="282" Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="25" />
        <DockPanel Grid.Row="13" Grid.Column="2" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="22" LastChildFill="False" Margin="0,2,-44,0"  
                   VerticalAlignment="Top" Width="835" >
            <Label Content="Для шума"  Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="28" VerticalAlignment="Center" 
                   VerticalContentAlignment="Center" Width="82" />
            <Label Content="Количество усреднений"  Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="28" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="65,0,0,0" IsManipulationEnabled="True" />
            <TextBox x:Name="MiddleCounterNoise"   TextWrapping="Wrap" Text="3"  BorderBrush="#FF007ACC" Background="{x:Null}" Padding="10,1"/>
            <Label Content="Вид усреднения" Margin="20,0,0,0"  Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="28" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <ComboBox x:Name="cbKindProcessingNoise" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="10,0,0,0" SelectedIndex="0">
                <ComboBoxItem Content="Выключено"/>
                <ComboBoxItem Content="Максимум"/>
                <ComboBoxItem Content="Среднее"/>
                <ComboBoxItem Content="Минимум"/>
            </ComboBox>
        </DockPanel>
        <DockPanel Grid.Row="12" Grid.Column="2" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="22" LastChildFill="False" Margin="0,2,-44,0" 
                   VerticalAlignment="Top" Width="835" >
            <Label Content="Для сигнала"   Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="28"
                   VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <Label Content="Количество усреднений" Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="28" 
                   VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="65,0,0,0" />
            <TextBox x:Name="MiddleCounterSignal" TextWrapping="Wrap" Text="3"  BorderBrush="#FF007ACC" 
                     Background="{x:Null}" Padding="10,1"/>
            <Label Content="Вид усреднения" Margin="20,0,0,0"  Foreground="#FF8ECFFB" ForceCursor="True" FontWeight="Bold" Height="28" VerticalContentAlignment="Center" VerticalAlignment="Center" />
            <ComboBox x:Name="cbKindProcessingSignal" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="10,0,0,0" SelectedIndex="0">
                <ComboBoxItem Content="Выключено"/>
                <ComboBoxItem Content="Максимум"/>
                <ComboBoxItem Content="Среднее"/>
                <ComboBoxItem Content="Минимум"/>
            </ComboBox>
            <!--<RadioButton x:Name="MiddleSwitchOffForSignal" Content="Выключено" Height="22"  Width="103" Foreground="#FFE6E6F0"/>
            <RadioButton x:Name="MiddleMaxValueForSignal" Content="Максимум" Height="22"  Width="91" Foreground="#FFEFEFF8" />
            <RadioButton x:Name="MiddleMiddleForSignal" Content="Среднее" Height="23"  Width="82" Foreground="#FFEFEFF8" Margin="0,0,0,-1"/>
            <RadioButton x:Name="MiddleMinValueForSignal" Content="Минимум" Height="23"  Width="75" Foreground="#FFEFEFF8" Margin="0,0,0,-1"/>-->
        </DockPanel>


        <Button Grid.Row="15" Grid.Column="3" Grid.ColumnSpan="2" Content="ПРИМЕНИТЬ " HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" 
                Foreground="#FFFDFDFE" Margin="514,0,0,0" Click="Button_Click" BorderBrush="#FF296FB6" Background="{x:Null}"/>
        
    </Grid>
</Window>
