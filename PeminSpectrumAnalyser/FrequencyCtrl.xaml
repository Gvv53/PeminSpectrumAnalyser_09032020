<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeminSpectrumAnalyser"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="PeminSpectrumAnalyser.FrequencyCtrl"
             mc:Ignorable="d" 
             d:DesignHeight="24.077" d:DesignWidth="123">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="comboBox1"  Grid.Column="1" SelectionChanged="ComboBox1_SelectionChanged"  BorderBrush="#FF535050" 
                  Foreground="Black" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="10" HorizontalContentAlignment="Center" FontWeight="Medium" />
        <TextBox x:Name="DataTextBox"  TextWrapping="Wrap" Text="0" TextChanged="DataTextBox_TextChanged_1" Background="{x:Null}" BorderBrush="#FF535050"
                 VerticalAlignment="Center" VerticalContentAlignment="Center" KeyDown="DataTextBox_KeyDown" HorizontalContentAlignment="Center" CaretBrush="White"/>
    </Grid>
</UserControl>
